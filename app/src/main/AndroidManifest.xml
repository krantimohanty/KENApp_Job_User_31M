<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.suchismita.essappleave">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PublicHolidayActivity"
            android:parentActivityName=".PublicHolidayActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.suchismita.essappleave.PublicHolidayActivity" />
        </activity>
        <activity
            android:name=".LeaveApplicationActivity"
            android:parentActivityName=".LeaveApplicationActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.suchismita.essappleave.LeaveApplicationActivity" />
        </activity>
        <activity android:name=".LeaveStatusActivity"
            android:parentActivityName=".LeaveStatusActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.suchismita.essappleave.LeaveStatusActivity" />
        </activity>
    </application>

</manifest>